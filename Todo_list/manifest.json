{
  "manifest_version": 2,

  "name": "Task Manager",
  "description": "This extension tracks your current task.",
  "version": "1.0",
  "icons": {
    "16": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "permissions": [
          "storage",
          "notifications",
          "contextMenus"
        ]
}